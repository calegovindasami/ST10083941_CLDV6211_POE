            </div>
            <div class="form-group">
                <label asp-for="Car.BodyTypeId" class="control-label"></label>
                <select asp-for="Car.BodyTypeId" class="form-control" asp-items="ViewBag.BodyTypeId"></select>
                <span asp-validation-for="Car.BodyTypeId" class="text-danger"></span>
            </div>
